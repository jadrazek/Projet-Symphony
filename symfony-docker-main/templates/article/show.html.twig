{% extends 'base.html.twig' %}

{% block title %}{{ article.titre }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <img 
                    src="{{ article.imageUrl | default('default.jpg') }}" 
                    class="card-img-top" 
                    alt="Image de l'article {{ article.titre }}"
                >
                <div class="card-body">
                    <h1 class="card-title">{{ article.titre }}</h1>
                    <p class="card-text">{{ article.text }}</p>
                    <p class="text-muted">Publié le : {{ article.date|date('d/m/Y') }}</p>
                    <a href="{{ path('app_articles') }}" class="btn btn-primary">Retour à la liste</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
